<body>
    <div class="container">
        <div class="header">
            <h1>ENOR v1.0</h1>
        </div>

        <div class="tabs-container">
            <div class="tabs-header" id="tabsHeader">
                <button class="tab active" onclick="switchTab(1)">Tab 1</button>
                <button class="add-tab" onclick="addTab()">+</button>
            </div>

            <div class="tab-content" id="tabContent">
                <div class="input-container">
                    <textarea class="input-field" placeholder=" " id="scriptInput"></textarea>
                </div>
                <div class="buttons-container">
                    <button class="inject-btn" onclick="handleInject()">Inject</button>
                    <button class="start-btn" onclick="handleStart()">Start</button>
                </div>
            </div>
        </div>

        <div class="footer">
            <p>ENOR v1.0</p>
        </div>
    </div>

    <div class="notification" id="notification"></div>

    <div class="beta-page" id="betaPage">
        <div class="beta-content">
            <h2>Добро пожаловать!</h2>
            <p>Приложение в бета версии!</p>
        </div>
    </div>

    <script>
        let tabCount = 1;
        let currentTab = 1;
        let isInjected = false;
        let scriptEntered = false;

        function switchTab(tabNumber) {
            currentTab = tabNumber;
            document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
            document.querySelector(`.tab:nth-child(${tabNumber})`).classList.add('active');
            
            const tabContent = document.getElementById('tabContent');
            tabContent.style.opacity = '0';
            
            setTimeout(() => {
                tabContent.style.opacity = '1';
            }, 300);
        }

        function addTab() {
            tabCount++;
            const tabsHeader = document.getElementById('tabsHeader');
            
            const newTab = document.createElement('button');
            newTab.className = 'tab';
            newTab.textContent = `Tab ${tabCount}`;
            newTab.onclick = () => switchTab(tabCount);
            
            tabsHeader.insertBefore(newTab, document.querySelector('.add-tab'));
            
            newTab.style.transform = 'scale(0)';
            setTimeout(() => {
                newTab.style.transform = 'scale(1)';
                newTab.style.transition = 'transform 0.3s ease';
            }, 10);
            
            switchTab(tabCount);
        }

        function showNotification(message, type = 'normal') {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.className = 'notification';
            
            if (type === 'error') {
                notification.classList.add('error-notification');
            } else if (type === 'success') {
                notification.classList.add('success-notification');
            }
            
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }

        function handleInject() {
            isInjected = true;
            scriptEntered = false;
            showNotification('ИНЖЕКТ ГОТОВ', 'success');
        }

        function handleStart() {
            if (!isInjected) {
                showNotification('ОШИБКА: ВЫ НЕ СДЕЛАЛИ ИНЖЕКТ', 'error');
                return;
            }

            if (!scriptEntered) {
                const scriptInput = document.getElementById('scriptInput');
                if (scriptInput.value.trim() === '') {
                    showNotification('ВВЕДИТЕ СКРИПТ И НАЖМИТЕ ПОВТОРНО', 'error');
                } else {
                    scriptEntered = true;
                    showNotification('Скрипт принят! Нажмите Start еще раз для запуска', 'success');
                }
                return;
            }

            // Если инжект сделан и скрипт введен
            const betaPage = document.getElementById('betaPage');
            betaPage.classList.add('show');
        }

        // Обработчик ввода текста
        document.getElementById('scriptInput').addEventListener('input', function() {
            if (this.value.trim() !== '') {
                scriptEntered = true;
            }
        });

        // Плавное появление при загрузке
        document.addEventListener('DOMContentLoaded', () => {
            document.body.style.opacity = '1';
            document.body.style.transition = 'opacity 1s ease';
        });
    </script>
</body>
</html>
